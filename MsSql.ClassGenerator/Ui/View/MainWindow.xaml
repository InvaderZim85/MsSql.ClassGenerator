<mah:MetroWindow
    x:Class="MsSql.ClassGenerator.Ui.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:MsSql.ClassGenerator.Ui.View"
    xmlns:viewModel="clr-namespace:MsSql.ClassGenerator.Ui.ViewModel"
    Title="MsSql.ClassGenerator"
    Width="1200"
    Height="800"
    mah:DialogParticipation.Register="{Binding}"
    Loaded="MainWindow_OnLoaded"
    ResizeMode="CanResizeWithGrip"
    TitleCharacterCasing="Normal"
    mc:Ignorable="d">

    <Window.DataContext>
        <viewModel:MainWindowViewModel />
    </Window.DataContext>

    <DockPanel LastChildFill="True">
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="INFO" />
        </StatusBar>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Connection  -->
            <Border Grid.Row="0" Style="{StaticResource BorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <view:HeadlineControl
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="6"
                        HeadlineText="Connection"
                        IconKind="AngleDoubleRight" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Server:"
                        Style="{StaticResource ItemKey}" />
                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        ItemsSource="{Binding ServerList}"
                        SelectedItem="{Binding SelectedServer}" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="75"
                        HorizontalAlignment="Left"
                        Command="{Binding ConnectCommand}"
                        Content="Connect" />
                    <Button
                        Grid.Row="1"
                        Grid.Column="3"
                        Width="30"
                        HorizontalAlignment="Left"
                        Command="{Binding AddConnectionCommand}">
                        <Button.Content>
                            <iconPacks:PackIconForkAwesome Kind="Plus" />
                        </Button.Content>
                    </Button>
                    <Button
                        Grid.Row="1"
                        Grid.Column="4"
                        Width="30"
                        HorizontalAlignment="Left"
                        Command="{Binding EditConnectionCommand}">
                        <Button.Content>
                            <iconPacks:PackIconForkAwesome Kind="Pencil" />
                        </Button.Content>
                    </Button>

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Database:"
                        Style="{StaticResource ItemKey}" />
                    <ComboBox
                        Grid.Row="2"
                        Grid.Column="1"
                        ItemsSource="{Binding DatabaseList}"
                        SelectedItem="{Binding SelectedDatabase}" />
                    <Button
                        Grid.Row="2"
                        Grid.Column="2"
                        Width="75"
                        HorizontalAlignment="Left"
                        Command="{Binding SelectCommand}"
                        Content="Select" />
                </Grid>
            </Border>

            <!--  Options  -->
            <Border Grid.Row="1" Style="{StaticResource BorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="34" />
                        <RowDefinition Height="34" />
                        <RowDefinition Height="34" />
                        <RowDefinition Height="34" />
                        <RowDefinition Height="34" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="700" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <view:HeadlineControl
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        HeadlineText="Settings / Options" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="Target:"
                        Style="{StaticResource ItemKey}" />
                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding OutputDirectory}" />
                        <Button
                            Grid.Column="1"
                            Width="40"
                            Command="{Binding BrowseOutputDirectoryCommand}"
                            Content="..." />
                        <CheckBox
                            Grid.Column="2"
                            Content="Clean output"
                            IsChecked="{Binding CleanExportDirectory}"
                            ToolTip="Deletes the contents of the folder before the new classes are generated. ALL existing files are irrevocably deleted!" />
                    </Grid>

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Content="Namespace:"
                        Style="{StaticResource ItemKey}" />
                    <Grid
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="300" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Text="{Binding Namespace}" />
                        <Label
                            Grid.Column="1"
                            Content="Modifier:"
                            Style="{StaticResource ItemKey}" />
                        <ComboBox
                            Grid.Column="2"
                            ItemsSource="{Binding ModifierList}"
                            SelectedItem="{Binding SelectedModifier}" />
                    </Grid>

                    <Label
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="Options:"
                        Style="{StaticResource ItemKey}" />
                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            Content="Add 'sealed' modifier"
                            IsChecked="{Binding AddSealed}" />
                        <CheckBox
                            Grid.Column="1"
                            Content="DB-Model (EF-Core)"
                            IsChecked="{Binding DbModel}" />
                        <CheckBox
                            Grid.Column="2"
                            Content="Add column attribute"
                            IsChecked="{Binding AddColumnAttribute}" />
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            Content="Add backing field"
                            IsChecked="{Binding AddBackingField}" />
                        <CheckBox
                            Grid.Column="1"
                            Content="Add 'SetProperty'"
                            IsChecked="{Binding AddSetProperty}" />
                        <CheckBox
                            Grid.Column="2"
                            Content="Add Summary"
                            IsChecked="{Binding AddSummary}" />
                    </Grid>
                    <Grid Grid.Row="5" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <CheckBox
                            Grid.Column="0"
                            Content="Add table name (to class summary)"
                            IsChecked="{Binding AddTableToSummary}" />
                    </Grid>
                </Grid>
            </Border>

            <!--  Data  -->
            <Border Grid.Row="2" Style="{StaticResource BorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <view:HeadlineControl
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HeadlineText="Tables / Columns" />

                    <view:HeadlineControl
                        Grid.Row="1"
                        Grid.Column="0"
                        HeadlineText="Tables"
                        TextFont="DemiBold"
                        TextStyle="Italic" />

                    <view:HeadlineControl
                        Grid.Row="1"
                        Grid.Column="1"
                        HeadlineText="Columns"
                        TextFont="DemiBold"
                        TextStyle="Italic" />

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource TextBoxFilter}" />

                    <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Style="{StaticResource TextBoxFilter}" />

                    <!--  Grids  -->
                    <DataGrid
                        Grid.Row="3"
                        Grid.Column="0"
                        ItemsSource="{Binding Tables}"
                        SelectedItem="{Binding SelectedTable}">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Width="Auto" Binding="{Binding Use}" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name}"
                                Header="Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Alias, UpdateSourceTrigger=PropertyChanged}"
                                Header="Alias" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid
                        Grid.Row="3"
                        Grid.Column="1"
                        ItemsSource="{Binding Columns}">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Width="Auto" Binding="{Binding Use}" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name}"
                                Header="Name"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Alias, UpdateSourceTrigger=PropertyChanged}"
                                Header="Alias" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Button Width="75" Content="Reset" />
                <Button Width="75" Content="Create" />
            </StackPanel>
        </Grid>
    </DockPanel>
</mah:MetroWindow>
